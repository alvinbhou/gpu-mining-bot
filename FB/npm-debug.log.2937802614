#　MC 錢包新增地址
/miner/subscribe
request: {'coin': 'mc', 'address': '0xsdf...','usersay': msg, 'channel': CHANNEL, 'callerid': chat_id}
response:
{     
    'ans': '新增成功/失敗/地址錯誤...',
    'data': {
        'success': true
    }
}

# MC get已新增的地址 (不知道有沒有需要，看地址要存在我這端 或是你那邊，每次user要查的時候，再去跟API用callerid mapping拿)
/miner/getAddress
request: {'coin': 'mc',  'channel': CHANNEL, 'callerid': chat_id}
response:
{    
    'ans': '新增成功/失敗/地址錯誤...',
    'data': {
        'success': true,
        'address': '0xsdf.....'
    }
}

